{% comment %}
This file is auto-generated by PageFly. The content can be overridden when publish page in PageFly. Please do not update this file directly.
If you plan to remove PageFly, please see the guide in our help center first: https://help.pagefly.io/.
{% endcomment %}
<!doctype html>
<html lang="{{ shop.locale }}" class="no-js" {% if settings.rtl %}dir="rtl"{% endif %}>
<head>{% render 'pagefly-head' %}
	 <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  
  
	{% capture seo_title %}
	{{ page_title }}
	
	{% unless page_title contains shop.name %}
	&ndash; {{ shop.name }}
	{% endunless %}
	{% endcapture %}
	
    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}
  
  
	<title>{{ seo_title }}</title>
	
	{%- if canonical_url != blank  -%}
		<link rel="canonical" href="{{ canonical_url }}">
	{%- endif -%}

	
	{%- if settings.favicon != blank -%}
		<link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
	{%- endif -%}
	
	{%- if page_description -%}
		<meta name="description" content="{{ page_description | escape }}">
	{%- endif -%}
  
  
  	 {% render 'meta-tags' %}
	
	
	
	<!--[if IE]>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<![endif]-->
	
	<!-- CSS -->
	{% include 'variables' %}
	
	{{ 'theme.css' | asset_url | stylesheet_tag | preload }}
  
 	{% if settings.use_lg %}
	  {{ 'component-gradient.css' | asset_url | stylesheet_tag }}
 	{% endif %}
  
	{% if settings.rtl %}
		{{ 'rtl.scss.css' | asset_url | stylesheet_tag }}
	{% endif %}
  
  	{%- if content_for_index contains 'slide-video-js' -%}
		{{ 'jquery.mb.YTPlayer.min.css' | asset_url | stylesheet_tag }}
	{%- endif -%}
  	
 
	{{ 'customer_styles.css' | asset_url | stylesheet_tag }}
 
 
	<!-- JS -->
	
	<script>
		var theme = {
			moneyFormat: {{ shop.money_format | json }},
			shopCurrency: {{ shop.currency | json }},
			moneyFormatCurrency: {{ shop.money_with_currency_format | json }}
		};
		
		theme.strings = {
			timerEnd:{{ 'layout.countdown.end' | t | json }}
		};
		document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
	</script>
	
	<script src="{{ 'jquery.min.js' | asset_url }}"></script>
	
	{%- if request.page_type contains 'customers' -%}
		{{ 'shopify_common.js' | shopify_asset_url | script_tag | remove: ' type="text/javascript"' }}
		{{ 'customer_area.js'  | shopify_asset_url | script_tag | remove: ' type="text/javascript"' }}
	{%- endif -%}
	
  
 
	<!-- SHOPIFY SERVICE SCRIPTS -->
	{{ content_for_header }}
</head>

<body class="template-{{ request.page_type | handle }} page-{{ template.suffix }} {% if settings.rtl %}rtl{% endif %} {% if settings.use_lg %} use_lg{% endif %}"><div class="pagefly-container">{{ content_for_layout }}</div></body>

</html>