{%- assign img_size_lg = '1920x330' -%}
{%- assign img_size_base = '166x137' -%}

{%- assign foorter_logo_size = '117x36' -%}
{%- assign item = section.settings -%}

<footer class="footer_type_1">
	{% if section.settings.footer_newsletter %}
		<div class="footer_item__newsletter"   >
		<div id="newsletter" class=" index_newsletter_wrapper{% if section.settings.offset-sm %} offset-sm{% endif %}"{% if section.settings.background_toggle %} style="background-color: {{ section.settings.bg_color }}"{% endif %}>

				<div  class=" {% if section.settings.container_settings == 'container' %}container{% elsif section.settings.container_settings == 'full-width' %}full-width{% endif %}{% if section.settings.inverted %} inverted{% endif %}">
					<div class="row">

						<div class="{% if section.settings.type_line %}col-12 type-line {% else %} text-center container container-770{% endif %}{% if section.settings.image_1 %} offset-md-1{% endif %}">
							{% if section.settings.image_1 %}

							<div class="d-sm-flex align-items-sm-center px-xl-5">

								<div class="img-fluid mr-sm-2 mr-lg-4 d-none d-sm-block">
									<img src="{{ section.settings.image_1 | img_url: img_size_base }}" class="img-fluid" alt="{{ section.settings.image_1.alt }}">
								</div>
								{% endif %}

								{% comment %} newsletter section  {% endcomment %}

								<div class="item__newsletter">
									<div class="newsletter-info">

										<p class="{% if section.settings.type_line %}h5 {% else %}h6 {% endif %}newsletter-title">
											{{ section.settings.title | escape }}
										</p>

										{% if section.settings.text.size > 0 %}
											<div class="{% if section.settings.type_line %}{% else %}h3 {% endif %}newsletter-description">
												{{ section.settings.text }}

											</div>
										{% endif %}
									</div>
									{% comment %} <div>kdjsdsdfsdfkds</div> {% endcomment %}
									{% include 'widget-newsletter' %}
								</div>
								{% if section.settings.image_1 %}
							</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
	<div id="footerDown" class="container pt-md-7 pb-md-6 pb-2 px-md-0">
		<div class="footer_main row justify-content-around">
			{% if section.settings.footer_logo  %}

				<div class="col-12 col-md-6 col-lg-4 without_toggle">
				<div class="footer_block mb-4 mb-md-0 border-n">
					{% comment %} <img src="../assets/logo.png" alt="" class="footerLogo"> {% endcomment %}
					<h6 class="logoText">FITYET STORE</h6>
					{% comment %} {% if section.settings.footer_logo_slogan.size > 0 %}
						{% assign logo_slogan = section.settings.footer_logo_slogan | prepend:'<div class="footer-logo-slogan text">' | append:'</div>' %}
					{% endif %} {% endcomment %}
					<p class="footerDesc">Are you looking for best-looking fitness clothing, most comfortable footwear, finest accessories and first-class nutrition and equipment? Why wait!!! Everything mentioned above and even more, you will find in this online store.</p>

					<div class="location">
						<img  src="../assets/location.png" alt="location">
						<p>GymVast, 18 East 50th Street, 4th Floor, <br> New York, NY 10022</p>
					</div>
					<div class="phone">
						<img  src="../assets/call.png" alt="phone">
						<p>65 094 778 622</p>
					</div>
				 {% comment %} {% assign logo_type = section.settings.footer_logo_type %}
					{% assign logo_i = section.settings.footer_logo_main %} {% endcomment %}
					{% if section.settings.contacts %}
						<ul class="contact_list">
						{% if section.settings.phone.size > 0 %}
							<li>
								<a class="contact_phone tel_ltr" href="tel:{{ section.settings.phone }}">
									<img src="../assets/emailLogo.png" alt="e" style="height: 20px; width:auto ; margin-right:8px;" srcset="">

									<span>{{ section.settings.phone_text }}<span>{{ section.settings.phone }}</span></span>
								</a>
							</li>
						{% endif %}
						{% if section.settings.email.size > 0 %}
							<li>
								<a id="sendEmail" class="contact_email" href="mailto:{{ section.settings.email }}">
									<img src="../assets/emailLogo.png" alt="e" style="height: 20px; width:auto ; margin-right:8px;" srcset="">

									<span>{{ section.settings.email_text }}<span class="d-none">{{ section.settings.email }}</span></span>
								</a>
							</li>
						{% endif %}
					</ul>
					{% endif %}
				</div>
			</div>
			{% endif %}

			{% for block in section.blocks %}
				{%- assign bl_it = block.settings -%}
				{% case block.type %}
					{% when 'linklist' %}
						{%- assign linklist = block.settings.links -%}
						<div class="col-12 col-md-6{% if forloop.first == true %} border-t{% endif %}{% if block.settings.column_item == 'column_2' %} col-lg-2{% elsif block.settings.column_item == 'column_3' %} col-lg-3{% elsif block.settings.column_item == 'column_4' %} col-lg-4{% elsif block.settings.column_item == 'column_5' %} col-md-5{% elsif block.settings.column_item == 'column_6' %} col-lg-6{% else %} col-lg-3{% endif %} footer_block">
							<div class="footer_item footer_item__links{% if block.settings.custom_class.size > 0 %} {{ block.settings.custom_class }}{% endif %}">
								<h6 id="linkHeader" class="linklist_footer_title toggle-mobile mb-3">
									{{ linklists[linklist].title }}
									<svg class="d-md-none" width="9" height="6" viewBox="0 0 9 6" xmlns="http://www.w3.org/2000/svg"><path d="M9 1.5L7.5 0L4.5 3L1.5 0L0 1.5L4.5 6L9 1.5Z" /></svg>
								</h6>
								<ul class="link_list content-toggle-mobile">
									{% for link in linklists[linklist].links %}
										<li>
											<a id="footerLink" {% if link.active %}class="active"{% endif %} href="{{ link.url }}">{{ link.title }}</a>
										</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					{% when 'contacts' %}
						<div class="col-12 col-md-6 {% if block.settings.column_item == 'column_2' %} col-lg-2{% elsif block.settings.column_item == 'column_3' %} col-lg-3{% elsif block.settings.column_item == 'column_4' %} col-lg-4{% elsif block.settings.column_item == 'column_5' %} col-lg-5{% elsif block.settings.column_item == 'column_6' %} col-lg-6{% else %} col-lg-3{% endif %} footer_block">
							<div class="footer_item footer_item__contacts">
								<h6 class="linklist_footer_title toggle-mobile mb-3">
									{{ block.settings.contacts_title }}
									<svg class="d-md-none" width="9" height="6" viewBox="0 0 9 6" xmlns="http://www.w3.org/2000/svg">
										<path d="M9 1.5L7.5 0L4.5 3L1.5 0L0 1.5L4.5 6L9 1.5Z" />
									</svg>
								</h6>
								<div class="content-toggle-mobile">
									{% include 'widget-contact-list' %}
								</div>
							</div>
						</div>
					{% when 'social-column' %}
			<div class="col-12 col-md-6 {% if block.settings.column_item == 'column_2' %} col-lg-2{% elsif block.settings.column_item == 'column_3' %} col-lg-3{% elsif block.settings.column_item == 'column_4' %} col-lg-4{% elsif block.settings.column_item == 'column_5' %} col-lg-5{% elsif block.settings.column_item == 'column_6' %} col-lg-6{% else %} col-lg-3{% endif %} footer_block">
					<div class="footer_item footer_item__contacts">
						<h6 class="linklist_footer_title toggle-mobile mb-3">
							{{ block.settings.socialicon_title }}
							<svg class="d-md-none" width="9" height="6" viewBox="0 0 9 6" xmlns="http://www.w3.org/2000/svg">
								<path d="M9 1.5L7.5 0L4.5 3L1.5 0L0 1.5L4.5 6L9 1.5Z" />
							</svg>
						</h6>
						<div class="content-toggle-mobile">
							{% include 'social-icon-link'  style: 'type_1' %}
						</div>
					</div>
				{% endcase %}
			{% endfor %}
		</div>
	</div>
	{% if section.settings.powered_toggle or section.settings.social_menu %}
		<div class=" copypright footer_bottom_pannel">

			<div class=" copypright container">
				<div class="row align-items-center justify-content-md-between">
					{% if section.settings.powered_toggle %}
						<div class="col-12 col-md-auto mt-md-0">
							<div class="copyrightText footer_copyright">
								{% assign copyright_year = "now" | date: "%Y" %}
								<div class="mt-1">Â© {{ shop.name }}. {{ powered_by_link }}</div>
							</div>
						</div>
					{% endif %}
					{% if section.settings.footer_submenu.size > 0 %}
						<div class="col-12 col-md-auto text-md-right">
							<ul class="footer-link-block mb-0">
								{% for link in linklists[section.settings.footer_submenu].links limit:4 %}
									<li class="link-block-item">
										<a class="link-block-link" href="{{ link.url }}">{{ link.title }}</a>
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
					{% if section.settings.payment_icons_toggle %}
						<div class="col-12 col-md-auto text-md-right">
							{% include 'payment-icons' %}
						</div>
					{% endif %}
					{% if section.settings.social_menu %}
						<div class="col-auto mt-md-0 mt-2 text-center text-md-right">
							{% include 'social-icon-link'  style: 'type_1' %}
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	{% endif %}
	</div>
</footer>



